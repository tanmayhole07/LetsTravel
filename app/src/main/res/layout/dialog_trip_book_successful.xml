<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/relativeLayout1"
        android:background="@color/colorGreenLight"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/siccessIv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/successTv"
            android:layout_centerHorizontal="true"
            android:src="@drawable/success_bg" />

        <TextView
            android:id="@+id/successTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_semiboldltalic"
            android:gravity="center"
            android:text="SUCCESS"
            android:textColor="@color/colorBlue"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/siccessIv"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="our Team wil contact you shortly"
            android:textAllCaps="true"
            android:textColor="@color/colorBlue"
            android:textSize="14sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>