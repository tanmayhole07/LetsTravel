<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".User.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <RelativeLayout
           android:id="@+id/layout1"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:elevation="5dp">

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:background="@drawable/home_bg" />

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/profileIv"
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:elevation="5dp"
               android:src="@drawable/admin_person_bg"
               app:civ_border_color="@color/colorPrimaryLogin"
               app:civ_border_width="1dp" />

           <TextView
               android:id="@+id/editUserInfoFab"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_alignParentBottom="true"
               android:layout_marginEnd="4dp"
               android:layout_marginBottom="30dp"
               android:background="@drawable/textview_shape"
               android:backgroundTint="@color/colorAccentLogin"
               android:fontFamily="@font/poppins_light"
               android:gravity="center"
               android:paddingStart="10dp"
               android:paddingTop="4dp"
               android:paddingEnd="10dp"
               android:paddingBottom="4dp"
               android:text="Edit Profile"
               android:textColor="@color/white"
               android:textSize="10sp" />

           <!--        <View-->
           <!--            android:layout_width="match_parent"-->
           <!--            android:layout_height="1dp"-->
           <!--            android:layout_alignParentBottom="true"-->
           <!--            android:background="@color/black"/>-->

       </RelativeLayout>

       <LinearLayout
           android:id="@+id/layout2"
           android:layout_below="@+id/layout1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingStart="20dp"
           android:paddingTop="20dp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/poppins_light"
               android:text="Username"
               android:textColor="@color/colorGrey02"
               android:textSize="10sp" />

           <TextView
               android:id="@+id/nameTv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/poppins_light"
               android:text=""
               android:textColor="@color/black"
               android:textSize="14sp" />

       </LinearLayout>

       <RelativeLayout
           android:layout_below="@+id/layout2"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@color/white">

           <LinearLayout
               android:id="@+id/emailll"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:paddingStart="20dp"
               android:paddingTop="10dp">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_light"
                   android:text="Email"
                   android:textColor="@color/colorGrey02"
                   android:textSize="10sp" />

               <TextView
                   android:id="@+id/emailTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_light"
                   android:text=""
                   android:textColor="@color/black"
                   android:textSize="14sp" />

           </LinearLayout>

           <LinearLayout
               android:id="@+id/mobileNumberll"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/emailll"
               android:orientation="vertical"
               android:paddingStart="20dp"
               android:paddingTop="13dp">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_light"
                   android:text="Mobile Number"
                   android:textColor="@color/colorGrey02"
                   android:textSize="10sp" />

               <TextView
                   android:id="@+id/phoneTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_light"
                   android:text=""
                   android:textColor="@color/black"
                   android:textSize="14sp" />

           </LinearLayout>

           <LinearLayout
               android:id="@+id/genderll"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:visibility="invisible"
               android:layout_below="@+id/mobileNumberll"
               android:orientation="vertical"
               android:paddingStart="20dp"
               android:paddingTop="13dp">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_light"
                   android:text="Gender"
                   android:textColor="@color/colorGrey02"
                   android:textSize="10sp" />

               <TextView
                   android:id="@+id/genderTv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_light"
                   android:text=""
                   android:textColor="@color/black"
                   android:textSize="14sp" />

           </LinearLayout>


           <TextView
               android:id="@+id/logoutBtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Logout"
               android:layout_alignParentEnd="true"
               android:layout_alignParentBottom="true"
               android:paddingStart="20dp"
               android:paddingTop="10dp"
               android:paddingEnd="20dp"
               android:paddingBottom="10dp"
               android:background="@color/colorAccentLogin"
               style="@style/TextAppearance.AppCompat.Button"
               android:textColor="@color/colorWhite"
               android:elevation="4dp"
               android:layout_marginEnd="16dp"
               android:layout_marginBottom="16dp"/>

           <!--        <TextView-->
           <!--            android:id="@+id/gpsTv"-->
           <!--            android:layout_width="match_parent"-->
           <!--            android:layout_height="wrap_content"-->
           <!--            android:layout_alignParentBottom="true"-->
           <!--            android:layout_centerHorizontal="true"-->
           <!--            android:layout_margin="20dp"-->
           <!--            android:fontFamily="@font/poppins_light"-->
           <!--            android:gravity="center"-->
           <!--            android:text="Click here to Enable GPS"-->
           <!--            android:textColor="@color/primaryTextColor"-->
           <!--            android:textSize="8sp" />-->

       </RelativeLayout>

   </RelativeLayout>

</FrameLayout>